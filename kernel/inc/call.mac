; macros

%define WORD_SIZE 2
%define DWORD_SIZE 4
%define QWORD_SIZE 8

%define argaddr32(arg) ebp + (arg+2)*DWORD_SIZE
%define arg32(arg) [argaddr32(arg)]

%macro proc32 0
  push ebp
  mov ebp, esp
%endmacro

%macro endproc32 0
  pop ebp
  ret
%endmacro

%macro proc 0
  push rbp
  mov rbp, rsp
%endmacro

%macro endproc 0
  pop rbp
  ret
%endmacro
